Require Import Arith Bool.

Theorem express_nat_n_as_q_and_r:
  forall d : nat,
    d > 0 ->
    forall n : nat,
    exists q r : nat,
      (r < d) /\ (n = q * d + r).
Proof.
  intros d H_d.
  intro n.
  induction n as [ | n' IHn'].
  + 
  
  
  
